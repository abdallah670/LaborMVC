    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - Labor Marketplace</title>
        <script type="importmap"></script>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/LaborPL.styles.css" asp-append-version="true" />
    </head>
    <body>
        <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand text-primary fw-bold" asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="bi bi-briefcase-fill me-1"></i>Labor Marketplace
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">
                                    <i class="bi bi-house me-1"></i>Home
                                </a>
                            </li>
                        
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                @* Admin Only Links *@
                                @if (User.IsInRole("Admin"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-gear me-1"></i>Admin
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Users"><i class="bi bi-people me-1"></i>Users</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Verifications"><i class="bi bi-patch-check me-1"></i>Verifications</a></li>
                                            <li><hr class="dropdown-divider"></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Admin" asp-action="Disputes"><i class="bi bi-exclamation-triangle me-1"></i>Disputes</a></li>
                                        </ul>
                                    </li>
                                }
                            
                                @* Poster Links *@
                                @if (User.IsInRole("Poster"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="posterDropdown" role="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-clipboard-plus me-1"></i>Tasks
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Task" asp-action="Create"><i class="bi bi-plus-circle me-1"></i>Post a Task</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Task" asp-action="MyTasks"><i class="bi bi-list-check me-1"></i>My Posted Tasks</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Application" asp-action="ByPoster"><i class="bi bi-person-lines-fill me-1"></i>Applications</a></li>
                                        </ul>
                                    </li>
                                }
                            
                                @* Worker Links *@
                                @if (User.IsInRole("Worker"))
                                {
                                    <li class="nav-item dropdown">
                                        <a class="nav-link dropdown-toggle text-dark" href="#" id="workerDropdown" role="button" data-bs-toggle="dropdown">
                                            <i class="bi bi-tools me-1"></i>Work
                                        </a>
                                        <ul class="dropdown-menu">
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Task" asp-action="Index"><i class="bi bi-search me-1"></i>Browse Tasks</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Application" asp-action="ByWorker"><i class="bi bi-file-earmark-text me-1"></i>My Applications</a></li>
                                            <li><a class="dropdown-item" asp-area="" asp-controller="Booking" asp-action="Dashboard"><i class="bi bi-calendar-check me-1"></i>My Bookings</a></li>
                                        </ul>
                                    </li>
                                }
                            
                                @* Bookings for all authenticated users *@
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Booking" asp-action="Dashboard">
                                        <i class="bi bi-calendar3 me-1"></i>Bookings
                                    </a>
                                </li>
                            }
                        
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    <i class="bi bi-shield me-1"></i>Privacy
                                </a>
                            </li>
                        </ul>
                        <ul class="navbar-nav">
                            @if (User.Identity?.IsAuthenticated == true)
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Profile">
                                        <i class="bi bi-person-circle me-1"></i>Profile
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="nav-link btn btn-link text-dark border-0">
                                            <i class="bi bi-box-arrow-right me-1"></i>Logout
                                        </button>
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">
                                        <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">
                                        <i class="bi bi-person-plus me-1"></i>Register
                                    </a>
                                </li>
                            }
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
        <div class="container">
            <main role="main" class="pb-3">
                @if (TempData["Message"] != null)
                {
                    <div class="alert alert-success text-center">
                        @TempData["Message"]
                    </div>
                }

                @if (TempData["Error"] != null)
                {
                    <div class="alert alert-danger text-center">
                        @TempData["Error"]
                    </div>
                }

                @RenderBody()
            </main>
        </div>

        <footer class="footer text-muted">
            <div class="container text-center py-3">
                &copy; 2026 - Labor Marketplace - 
                <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        @await RenderSectionAsync("Scripts", required: false)
    
    </script>

    </body>
    </html>
