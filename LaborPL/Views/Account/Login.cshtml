@model LaborBLL.ModelVM.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="auth-card fade-in">
        <div class="card shadow">
            <div class="card-header bg-primary-gradient text-white text-center">
                <h3 class="mb-0">Welcome Back</h3>
                <p class="mb-0 mt-2 opacity-75">Sign in to continue to Labor Marketplace</p>
            </div>
            <div class="card-body">
                <form asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
                    <div asp-validation-summary="All" class="validation-summary-errors"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                        </div>
                        <span asp-validation-for="Email" class="field-validation-error"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <div class="input-group">
                            <span class="input-group-text"><i class="bi bi-lock"></i></span>
                            <input asp-for="Password" class="form-control" placeholder="Enter your password" />
                        </div>
                        <span asp-validation-for="Password" class="field-validation-error"></span>
                    </div>

                    <div class="mb-4 form-check">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label"></label>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-box-arrow-in-right me-2"></i>Login
                        </button>
                    </div>

                    <div class="auth-links">
                        <p class="mb-0">
                            Don't have an account? 
                            <a asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">Register here</a>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
