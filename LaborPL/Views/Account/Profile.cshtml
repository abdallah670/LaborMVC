@model LaborBLL.ModelVM.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
    Layout = "_Layout";
    var isOwnProfile = ViewBag.IsOwnProfile as bool? ?? true;
}

<div class="profile-container fade-in">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show d-flex align-items-center" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <!-- Profile Sidebar -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow profile-sidebar">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ProfilePictureUrl))
                    {
                        <img src="@Model.ProfilePictureUrl" alt="Profile Picture" class="profile-avatar" />
                    }
                    else
                    {
                        <div class="profile-avatar-placeholder">
                            <span>@(Model.FirstName?.FirstOrDefault())@(Model.LastName?.FirstOrDefault())</span>
                        </div>
                    }
                    
                    <h4 class="profile-name">@Model.FirstName @Model.LastName</h4>
                    <p class="profile-email">@Model.Email</p>
                    
                    @if (Model.IDVerified)
                    {
                        <span class="profile-badge verified">
                            <i class="bi bi-patch-check-fill me-1"></i>ID Verified
                        </span>
                    }
                    else
                    {
                        <span class="profile-badge not-verified">
                            <i class="bi bi-exclamation-triangle me-1"></i>ID Not Verified
                        </span>
                    }

                    @if (Model.AverageRating.HasValue)
                    {
                        <div class="profile-rating">
                            @for (int i = 1; i <= 5; i++)
                            {
                                <i class="bi bi-star-fill star @(i <= Math.Round(Model.AverageRating.Value) ? "filled" : "empty")"></i>
                            }
                            <span class="ms-2 text-muted">(@Model.AverageRating?.ToString("0.0"))</span>
                        </div>
                    }

                    <p class="profile-member-since">
                        <i class="bi bi-calendar3 me-1"></i>
                        Member since: @Model.CreatedAt.ToString("MMM dd, yyyy")
                    </p>
                    
                    @if (!isOwnProfile)
                    {
                        <a asp-action="Profile" class="btn btn-outline-primary w-100 mt-3">
                            <i class="bi bi-person me-1"></i>View My Profile
                        </a>
                    }
                </div>
            </div>
        </div>

        <!-- Profile Form -->
        <div class="col-lg-8">
            <div class="card shadow">
                <div class="card-header bg-primary-gradient text-white">
                    <h4 class="mb-0">
                        @if (isOwnProfile)
                        {
                            <i class="bi bi-pencil-square me-2"></i><text>Edit Profile</text>
                        }
                        else
                        {
                            <i class="bi bi-person me-2"></i><text>Worker Profile</text>
                        }
                    </h4>
                </div>
                <div class="card-body">
                    @if (isOwnProfile)
                    {
                        <form asp-action="Profile" method="post" class="profile-form">
                            <input type="hidden" asp-for="Id" />
                            <input type="hidden" asp-for="Email" />
                            <input type="hidden" asp-for="CreatedAt" />
                            <input type="hidden" asp-for="IDVerified" />
                            <input type="hidden" asp-for="AverageRating" />

                            <div asp-validation-summary="All" class="validation-summary-errors"></div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label asp-for="FirstName" class="form-label">
                                        <i class="bi bi-person me-1"></i>@Html.DisplayNameFor(m => m.FirstName)
                                    </label>
                                    <input asp-for="FirstName" class="form-control" />
                                    <span asp-validation-for="FirstName" class="field-validation-error"></span>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label asp-for="LastName" class="form-label">
                                        <i class="bi bi-person me-1"></i>@Html.DisplayNameFor(m => m.LastName)
                                    </label>
                                    <input asp-for="LastName" class="form-control" />
                                    <span asp-validation-for="LastName" class="field-validation-error"></span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="PhoneNumber" class="form-label">
                                    <i class="bi bi-phone me-1"></i>@Html.DisplayNameFor(m => m.PhoneNumber)
                                </label>
                                <input asp-for="PhoneNumber" class="form-control" />
                                <span asp-validation-for="PhoneNumber" class="field-validation-error"></span>
                            </div>

                            <!-- Location Section with Map Picker -->
                            <div class="card mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="bi bi-geo-alt me-2"></i>Location Settings</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-crosshair me-1"></i>Auto-Detect Location
                                            </label>
                                            <div class="d-grid gap-2">
                                                <button type="button" id="detectLocationBtn" class="btn btn-outline-primary">
                                                    <i class="bi bi-geo-alt-fill me-1"></i>Detect My Location
                                                </button>
                                            </div>
                                            <div id="locationStatus" class="mt-2 small"></div>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label class="form-label">
                                                <i class="bi bi-map me-1"></i>Select on Map
                                            </label>
                                            <div id="mapPicker" class="map-picker-container"></div>
                                        </div>
                                    </div>
                                    
                                    <div class="row mt-3">
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="Location" class="form-label">
                                                <i class="bi bi-geo-alt me-1"></i>@Html.DisplayNameFor(m => m.Location)
                                            </label>
                                            <input asp-for="Location" class="form-control" placeholder="Your address or area" />
                                            <span asp-validation-for="Location" class="field-validation-error"></span>
                                        </div>
                                        <div class="col-md-6 mb-3">
                                            <label asp-for="Country" class="form-label">
                                                <i class="bi bi-globe me-1"></i>@Html.DisplayNameFor(m => m.Country)
                                            </label>
                                            <input asp-for="Country" class="form-control" placeholder="Your country" />
                                            <span asp-validation-for="Country" class="field-validation-error"></span>
                                        </div>
                                    </div>
                                    
                                    <!-- Hidden fields for coordinates -->
                                    <input type="hidden" asp-for="Latitude" id="latitudeInput" />
                                    <input type="hidden" asp-for="Longitude" id="longitudeInput" />
                                    <input type="hidden" asp-for="LocationUrl" id="locationUrlInput" />
                                    
                                    <!-- Location preview -->
                                    <div id="locationPreview" class="mt-3" style="display: none;">
                                        <div class="alert alert-info d-flex align-items-center" role="alert">
                                            <i class="bi bi-info-circle-fill me-2"></i>
                                            <div>
                                                <strong>Your Location:</strong>
                                                <span id="coordinatesDisplay"></span>
                                                <a id="viewOnMapLink" href="#" target="_blank" class="ms-2">
                                                    <i class="bi bi-box-arrow-up-right"></i> View on Google Maps
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Bio" class="form-label">
                                    <i class="bi bi-text-paragraph me-1"></i>@Html.DisplayNameFor(m => m.Bio)
                                </label>
                                <textarea asp-for="Bio" class="form-control" rows="4" placeholder="Tell us about yourself, your experience, and what makes you unique..."></textarea>
                                <span asp-validation-for="Bio" class="field-validation-error"></span>
                            </div>

                            <div class="mb-4">
                                <label asp-for="Skills" class="form-label">
                                    <i class="bi bi-tools me-1"></i>@Html.DisplayNameFor(m => m.Skills)
                                </label>
                                <input asp-for="Skills" class="form-control" placeholder="e.g., Plumbing, Electrical, Cleaning, Moving, Gardening" />
                                <small class="text-muted">Separate skills with commas</small>
                                <span asp-validation-for="Skills" class="field-validation-error"></span>
                            </div>

                            <div class="d-flex gap-2 justify-content-end">
                                <a asp-action="Profile" class="btn btn-outline-secondary">
                                    <i class="bi bi-x-circle me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-primary">
                                    <i class="bi bi-check-circle me-1"></i>Save Changes
                                </button>
                            </div>
                        </form>
                    }
                    else
                    {
                        <!-- Read-only profile view for other users -->
                        <div class="profile-read-only">
                            <div class="row mb-4">
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-1"><i class="bi bi-phone me-1"></i>Phone</h6>
                                    <p class="mb-3">@(Model.PhoneNumber ?? "Not provided")</p>
                                </div>
                                <div class="col-md-6">
                                    <h6 class="text-muted mb-1"><i class="bi bi-geo-alt me-1"></i>Location</h6>
                                    <p class="mb-3">@(Model.Location ?? Model.Country ?? "Not provided")</p>
                                </div>
                            </div>
                            
                            <div class="mb-4">
                                <h6 class="text-muted mb-1"><i class="bi bi-text-paragraph me-1"></i>Bio</h6>
                                <p class="mb-3">@(Model.Bio ?? "No bio provided")</p>
                            </div>
                            
                            <div class="mb-4">
                                <h6 class="text-muted mb-1"><i class="bi bi-tools me-1"></i>Skills</h6>
                                @if (!string.IsNullOrEmpty(Model.Skills))
                                {
                                    <div class="d-flex flex-wrap gap-2">
                                        @foreach (var skill in Model.Skills.Split(',', StringSplitOptions.RemoveEmptyEntries))
                                        {
                                            <span class="badge bg-primary">@skill.Trim()</span>
                                        }
                                    </div>
                                }
                                else
                                {
                                    <p class="mb-0 text-muted">No skills listed</p>
                                }
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@if (isOwnProfile)
{
    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
        
        <!-- Leaflet CSS -->
        <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" 
              integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" 
              crossorigin="" />
        <!-- Leaflet JS -->
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" 
                integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" 
                crossorigin=""></script>
        
        <!-- Location Service -->
        <script src="~/js/locationService.js"></script>
        <!-- Map Picker -->
        <script src="~/js/mapPicker.js"></script>
        
        <script>
            let mapPicker;
            
            document.addEventListener('DOMContentLoaded', function() {
                // Get initial coordinates from model or use defaults (Cairo)
                const initialLat = @(Model.Latitude?.ToString() ?? "null") || 30.0444;
                const initialLng = @(Model.Longitude?.ToString() ?? "null") || 31.2357;
                const hasExistingLocation = @(Model.Latitude.HasValue.ToString().ToLower());
                
                // Initialize map picker
                mapPicker = new MapPicker('mapPicker', {
                    defaultLat: initialLat,
                    defaultLng: initialLng,
                    defaultZoom: hasExistingLocation ? 15 : 12,
                    onLocationChange: function(data) {
                        updateLocationFields(data);
                    }
                });
                
                // Show existing location if available
                if (hasExistingLocation) {
                    showLocationPreview(initialLat, initialLng);
                }
                
                // Auto-detect button handler
                document.getElementById('detectLocationBtn').addEventListener('click', async function() {
                    const btn = this;
                    const statusEl = document.getElementById('locationStatus');
                    
                    // Disable button and show loading
                    btn.disabled = true;
                    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-1"></span>Detecting...';
                    statusEl.innerHTML = '<span class="text-muted"><i class="bi bi-arrow-repeat spin"></i> Getting your location...</span>';
                    
                    try {
                        // Check if geolocation is available
                        if (!LocationService.isGeolocationAvailable()) {
                            throw new Error('Geolocation is not supported by your browser.');
                        }
                        
                        // Check if secure context
                        if (!LocationService.isSecureContext()) {
                            throw new Error('Location detection requires HTTPS. Please use a secure connection.');
                        }
                        
                        // Get current position
                        const position = await LocationService.getCurrentPosition();
                        
                        // Update map
                        mapPicker.setLocation(position.latitude, position.longitude);
                        
                        // Add accuracy circle if available
                        if (position.accuracy) {
                            mapPicker.addAccuracyCircle(position.accuracy);
                        }
                        
                        // Get address from coordinates (reverse geocoding)
                        const address = await LocationService.reverseGeocode(position.latitude, position.longitude);
                        
                        if (address.success) {
                            document.getElementById('Location').value = address.address;
                            document.getElementById('Country').value = address.country || '';
                        }
                        
                        // Show success message
                        statusEl.innerHTML = '<span class="text-success"><i class="bi bi-check-circle-fill"></i> Location detected successfully!</span>';
                        
                    } catch (error) {
                        statusEl.innerHTML = `<span class="text-danger"><i class="bi bi-exclamation-triangle-fill"></i> ${error.message}</span>`;
                    } finally {
                        // Re-enable button
                        btn.disabled = false;
                        btn.innerHTML = '<i class="bi bi-geo-alt-fill me-1"></i>Detect My Location';
                    }
                });
            });
            
            function updateLocationFields(data) {
                // Update hidden fields
                document.getElementById('latitudeInput').value = data.latitude;
                document.getElementById('longitudeInput').value = data.longitude;
                document.getElementById('locationUrlInput').value = data.locationUrl;
                
                // Show location preview
                showLocationPreview(data.latitude, data.longitude);
            }
            
            function showLocationPreview(lat, lng) {
                const previewEl = document.getElementById('locationPreview');
                const coordsEl = document.getElementById('coordinatesDisplay');
                const mapLinkEl = document.getElementById('viewOnMapLink');
                
                previewEl.style.display = 'block';
                coordsEl.textContent = LocationService.formatCoordinates(lat, lng);
                mapLinkEl.href = LocationService.generateGoogleMapsUrl(lat, lng);
            }
        </script>
    }
}
