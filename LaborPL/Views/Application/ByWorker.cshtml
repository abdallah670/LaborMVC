@model IEnumerable<LaborBLL.ModelVM.TaskApplicationViewModel>
@{
    ViewData["Title"] = "My Applications";
    var currentFilter = ViewBag.CurrentFilter as string ?? "all";
}

<div class="applications-worker-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-file-earmark-text me-2"></i>My Applications</h2>
            <p class="text-muted mb-0">Track the status of your task applications</p>
        </div>
        <a asp-controller="Task" asp-action="Index" class="btn btn-primary">
            <i class="bi bi-search me-1"></i>Browse More Tasks
        </a>
    </div>

    <!-- Filter Tabs -->
    <div class="card shadow mb-4">
        <div class="card-header bg-transparent">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "all" ? "active" : "")" asp-action="ByWorker" asp-route-filter="all">
                        <i class="bi bi-grid me-1"></i>All
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "pending" ? "active" : "")" asp-action="ByWorker" asp-route-filter="pending">
                        <i class="bi bi-hourglass me-1"></i>Pending
                        <span class="badge bg-warning ms-1">@ViewBag.PendingCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "accepted" ? "active" : "")" asp-action="ByWorker" asp-route-filter="accepted">
                        <i class="bi bi-check-circle me-1"></i>Accepted
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "rejected" ? "active" : "")" asp-action="ByWorker" asp-route-filter="rejected">
                        <i class="bi bi-x-circle me-1"></i>Rejected
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="applications-list">
                    @foreach (var app in Model)
                    {
                        <div class="application-card card mb-3 shadow-sm">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <h5 class="mb-2">
                                            <a asp-controller="Task" asp-action="Details" asp-route-id="@app.TaskId" class="text-decoration-none">
                                                @app.TaskTitle
                                            </a>
                                        </h5>
                                        
                                        <div class="d-flex align-items-center gap-3 mb-2">
                                            <span class="badge @GetStatusBadgeClass(app.Status)">@app.StatusDisplay</span>
                                            @if (app.ViewedAt.HasValue)
                                            {
                                                <span class="text-muted small">
                                                    <i class="bi bi-eye me-1"></i>Viewed by poster
                                                </span>
                                            }
                                        </div>

                                        @if (!string.IsNullOrEmpty(app.Message))
                                        {
                                            <div class="application-message mt-2 p-2 bg-light rounded">
                                                <small class="text-muted">Your message:</small>
                                                <p class="mb-0 small">@app.Message</p>
                                            </div>
                                        }
                                    </div>
                                    <div class="col-md-4 text-md-end">
                                        <div class="application-budget mb-2">
                                            <h4 class="text-primary mb-0">$@app.ProposedBudget.ToString("N2")</h4>
                                            @if (app.EstimatedHours.HasValue)
                                            {
                                                <small class="text-muted">@app.EstimatedHours.Value hrs estimated</small>
                                            }
                                        </div>
                                        <div class="text-muted small">
                                            <i class="bi bi-clock me-1"></i>Applied @app.CreatedAt.ToString("MMM dd, yyyy")
                                        </div>
                                    </div>
                                </div>

                                @if (app.Status == LaborDAL.Enums.ApplicationStatus.Pending)
                                {
                                    <div class="application-actions mt-3 pt-3 border-top">
                                        <form asp-action="Withdraw" asp-route-id="@app.Id" method="post" class="d-inline"
                                              onsubmit="return confirm('Are you sure you want to withdraw this application?');">
                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                <i class="bi bi-x-circle me-1"></i>Withdraw Application
                                            </button>
                                        </form>
                                    </div>
                                }
                                @if (app.Status == LaborDAL.Enums.ApplicationStatus.Accepted)
                                {
                                    <div class="application-actions mt-3 pt-3 border-top">
                                        <a asp-controller="Booking" asp-action="Details" asp-route-id="@app.TaskId" class="btn btn-success btn-sm">
                                            <i class="bi bi-calendar-check me-1"></i>View Booking
                                        </a>
                                    </div>
                                }
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <div class="empty-state-icon mb-3">
                        <i class="bi bi-file-earmark-x" style="font-size: 3rem; color: var(--muted-text);"></i>
                    </div>
                    <h5>No applications found</h5>
                    <p class="text-muted mb-3">
                        @if (currentFilter == "all")
                        {
                            <span>You haven't applied to any tasks yet.</span>
                        }
                        else
                        {
                            <span>No @currentFilter applications found.</span>
                        }
                    </p>
                    <a asp-controller="Task" asp-action="Index" class="btn btn-primary">
                        <i class="bi bi-search me-1"></i>Browse Tasks
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(LaborDAL.Enums.ApplicationStatus status)
    {
        return status switch
        {
            LaborDAL.Enums.ApplicationStatus.Pending => "bg-warning",
            LaborDAL.Enums.ApplicationStatus.Viewed => "bg-info",
            LaborDAL.Enums.ApplicationStatus.Accepted => "bg-success",
            LaborDAL.Enums.ApplicationStatus.Rejected => "bg-danger",
            LaborDAL.Enums.ApplicationStatus.Withdrawn => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}