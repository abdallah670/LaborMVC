@model BookingDetailViewModel
@using LaborDAL.Enums
@using System.Security.Claims

@{
    ViewData["Title"] = "Booking Details";

    var roles = ((ClaimsIdentity)User.Identity).Claims
        .Where(c => c.Type == ClaimTypes.Role)
        .Select(c => c.Value)
        .ToList();

    bool isWorker = roles.Contains("Worker");
    bool isPoster = roles.Contains("Poster");
}

<div class="booking-dashboard-container fade-in">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-calendar-check me-2"></i>Booking #@Model.Id</h2>
            <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
        </div>
        <a asp-action="Dashboard" class="btn btn-outline-secondary"><i class="bi bi-arrow-left me-1"></i>Back to Dashboard</a>
    </div>

    <div class="row g-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Booking Information</h5>
                </div>
                <div class="card-body">
                    @inject UserManager<AppUser> userManager

                    @{
                        var currentUserId = userManager.GetUserId(User);
                    }
                    @if (currentUserId == Model.WorkerId)
                    {
                        <div class="mb-3">
                            <strong>Poster Name</strong>
                            <p class="text-muted mb-0">
                                <a href="@Url.Action("ProfilePoster", "Booking", new { id = Model.PosterId })">
                                    @Model.PosterName
                                </a>
                            </p>
                        </div>
                    }
                    else if (currentUserId == Model.PosterId)
                    {
                        <div class="mb-3">
                            <strong>Worker Name</strong>
                            <p class="text-muted mb-0">
                                <a href="@Url.Action("ProfilePoster", "Booking", new { id = Model.WorkerId })">
                                    @Model.WorkerName
                                </a>
                            </p>
                            <p>@currentUserId</p>
                            <p>@Model.PosterId</p>
                            <p>@Model.WorkerId</p>
                        </div>
                    }
                    <div class="mb-3"><strong>Start Time</strong> <p class="text-muted mb-0">@Model.StartTime?.ToString("MMM dd, yyyy HH:mm") ?? "Not Scheduled Yet"</p></div>
                    <div class="mb-3"><strong>End Time</strong> <p class="text-muted mb-0">@Model.EndTime?.ToString("MMM dd, yyyy HH:mm") ?? "Not Scheduled Yet"</p></div>
                    <div class="mb-3"><strong>Agreed Rate</strong> <p class="text-primary fs-5 mb-0">$@Model.AgreedRate.ToString("N2")</p></div>
                    <div class="mb-3"><strong>Status</strong> <p class="mb-0">@Model.Status</p></div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0">Quick Actions</h5>
                </div>
                <div class="card-body">

                    @* Cancel available for Poster or Worker if Scheduled *@
                    @if (Model.Status == BookingStatus.Scheduled && (isWorker || isPoster))
                    {
                        <button type="button" data-bs-toggle="modal" data-bs-target="#cancelModal" class="btn btn-danger w-100 mb-2">Cancel</button>
                    }

                    @* Start Work only for Worker if Scheduled *@
                    @if (Model.Status == BookingStatus.Scheduled && isWorker && !isPoster)
                    {
                        <form asp-controller="Booking" asp-action="Start" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary w-100 mb-2">Start Work</button>
                        </form>
                    }

                    @* Mark as Completed only for Worker if InProgress *@
                    @if (Model.Status == BookingStatus.InProgress && isWorker && !isPoster)
                    {
                        <form asp-controller="Booking" asp-action="Complete" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-success w-100">Mark as Completed</button>
                        </form>
                    }

                    @* Confirm Completion only for Poster if CompletedByWorker *@
                    @if (Model.Status == BookingStatus.CompletedfromWorker && isPoster)
                    {
                        <form asp-controller="Booking" asp-action="ConfirmCompletion" asp-route-id="@Model.Id" method="post">
                            @Html.AntiForgeryToken()
                            <button type="submit" class="btn btn-primary w-100">Confirm Completion</button>
                        </form>
                    }

                    @* Raise Dispute only for Poster or Worker if Completed *@
                    @if (Model.Status == BookingStatus.Completed && (isWorker || isPoster))
                    {
                        <a asp-action="RaiseDispute" asp-route-bookingId="@Model.Id" class="btn btn-outline-danger w-100 mb-2">
                            <i class="bi bi-exclamation-triangle me-1"></i>Raise Dispute
                        </a>
                        <small class="text-muted d-block mt-2 text-center">
                            Disputes must be raised within 48 hours of completion
                        </small>
                    }

                    @if (Model.Status == BookingStatus.Disputed)
                    {
                        <div class="alert alert-warning mb-0">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            This booking is under dispute review.
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal">
    <div class="modal-dialog">
        <div class="modal-content">

            <div class="modal-header">
                <h5 class="modal-title">Warning</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>

            <div class="modal-body">
                A penalty of @ViewBag.Penalty EGP will be deducted.
                <br />
                Are you sure you want to cancel this booking?
            </div>

            <div class="modal-footer w-100">
                <form asp-action="Cancel" method="post" class="w-100">
                    <input type="hidden" name="id" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger w-100">Confirm Cancellation</button>
                </form>
                <button type="button" class="btn btn-secondary w-100" data-bs-dismiss="modal">Go Back</button>
            </div>

        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(BookingStatus status) => status switch
    {
        BookingStatus.Scheduled => "bg-warning",
        BookingStatus.InProgress => "bg-info",
        BookingStatus.CompletedfromWorker => "bg-info",
        BookingStatus.Completed => "bg-success",
        BookingStatus.Cancelled => "bg-danger",
        BookingStatus.Disputed => "bg-dark",
        _ => "bg-secondary"
    };
}
