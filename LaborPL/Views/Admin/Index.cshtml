@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="admin-dashboard-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-speedometer2 me-2"></i>Admin Dashboard</h2>
            <p class="text-muted mb-0">Platform overview and management</p>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">@ViewBag.TotalUsers</h3>
                            <small>Total Users</small>
                        </div>
                        <i class="bi bi-people fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">@ViewBag.TotalTasks</h3>
                            <small>Total Tasks</small>
                        </div>
                        <i class="bi bi-clipboard-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-info text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">@ViewBag.TotalBookings</h3>
                            <small>Total Bookings</small>
                        </div>
                        <i class="bi bi-calendar-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h3 class="mb-0">@ViewBag.PendingVerifications</h3>
                            <small>Pending Verifications</small>
                        </div>
                        <i class="bi bi-patch-check fs-1 opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row g-4">
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-people me-2"></i>User Management</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Manage user accounts, roles, and permissions.</p>
                    <a asp-action="Users" class="btn btn-primary w-100">
                        <i class="bi bi-arrow-right me-1"></i>Manage Users
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-patch-check me-2"></i>Verifications</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Review and approve user ID verifications.</p>
                    <a asp-action="Verifications" class="btn btn-warning w-100">
                        <i class="bi bi-arrow-right me-1"></i>Review Verifications
                    </a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow h-100">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-exclamation-triangle me-2"></i>Disputes</h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">Handle disputes between users.</p>
                    <a asp-action="Disputes" class="btn btn-danger w-100">
                        <i class="bi bi-arrow-right me-1"></i>Manage Disputes
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>