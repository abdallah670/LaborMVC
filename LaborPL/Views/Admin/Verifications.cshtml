@model IEnumerable<LaborBLL.ModelVM.ProfileViewModel>
@{
    ViewData["Title"] = "ID Verifications";
    var currentFilter = ViewBag.CurrentFilter as string ?? "pending";
}

<div class="admin-verifications-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-patch-check me-2"></i>ID Verifications</h2>
            <p class="text-muted mb-0">Review and approve user identity verification requests</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card shadow-sm bg-warning">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.PendingCount</h3>
                    <small>Pending Verification</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.VerifiedCount</h3>
                    <small>Verified Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.RejectedCount</h3>
                    <small>Rejected</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card shadow">
        <div class="card-header bg-transparent">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "pending" ? "active" : "")" asp-action="Verifications" asp-route-filter="pending">
                        <i class="bi bi-hourglass me-1"></i>Pending
                        <span class="badge bg-warning ms-1">@ViewBag.PendingCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "verified" ? "active" : "")" asp-action="Verifications" asp-route-filter="verified">
                        <i class="bi bi-check-circle me-1"></i>Verified
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "rejected" ? "active" : "")" asp-action="Verifications" asp-route-filter="rejected">
                        <i class="bi bi-x-circle me-1"></i>Rejected
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="row g-4">
                    @foreach (var user in Model)
                    {
                        <div class="col-md-6 col-lg-4">
                            <div class="card shadow-sm h-100">
                                <div class="card-body">
                                    <div class="d-flex align-items-center mb-3">
                                        @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                        {
                                            <img src="@user.ProfilePictureUrl" alt="" class="rounded-circle me-3" style="width: 60px; height: 60px; object-fit: cover;">
                                        }
                                        else
                                        {
                                            <div class="rounded-circle me-3 d-flex align-items-center justify-content-center" style="width: 60px; height: 60px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white; font-weight: 600; font-size: 1.5rem;">
                                                @(user.FirstName?.FirstOrDefault())@(user.LastName?.FirstOrDefault())
                                            </div>
                                        }
                                        <div>
                                            <h5 class="mb-0">@user.FirstName @user.LastName</h5>
                                            <p class="text-muted mb-0 small">@user.Email</p>
                                            <span class="badge @(user.IDVerified ? "bg-success" : "bg-warning")">
                                                @(user.IDVerified ? "Verified" : "Pending")
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="mb-3">
                                        <h6 class="mb-2">Submitted Documents:</h6>
                                        <div class="d-flex gap-2">
                                            <span class="badge bg-light text-dark border">
                                                <i class="bi bi-card-image me-1"></i>ID Front
                                            </span>
                                            <span class="badge bg-light text-dark border">
                                                <i class="bi bi-card-image me-1"></i>ID Back
                                            </span>
                                        </div>
                                    </div>
                                    
                                    <div class="d-flex justify-content-between align-items-center">
                                        <small class="text-muted">
                                            <i class="bi bi-calendar me-1"></i>@user.CreatedAt.ToString("MMM dd, yyyy")
                                        </small>
                                        @if (!user.IDVerified)
                                        {
                                            <div class="btn-group">
                                                <form asp-action="ApproveVerification" asp-route-id="@user.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-success me-1">
                                                        <i class="bi bi-check-lg me-1"></i>Approve
                                                    </button>
                                                </form>
                                                <form asp-action="RejectVerification" asp-route-id="@user.Id" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="bi bi-x-lg me-1"></i>Reject
                                                    </button>
                                                </form>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <div class="empty-state-icon mb-3">
                        <i class="bi bi-patch-check" style="font-size: 3rem; color: var(--muted-text);"></i>
                    </div>
                    <h5>No verification requests found</h5>
                    <p class="text-muted">No users match the current filter.</p>
                </div>
            }
        </div>
    </div>
</div>