@model IEnumerable<LaborBLL.ModelVM.ProfileViewModel>
@{
    ViewData["Title"] = "User Management";
    var currentFilter = ViewBag.CurrentFilter as string ?? "all";
}

<div class="admin-users-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-people me-2"></i>User Management</h2>
            <p class="text-muted mb-0">Manage user accounts and roles</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm bg-primary text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.TotalUsers</h3>
                    <small>Total Users</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.WorkersCount</h3>
                    <small>Workers</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.PostersCount</h3>
                    <small>Posters</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-warning">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.VerifiedUsers</h3>
                    <small>Verified Users</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card shadow">
        <div class="card-header bg-transparent">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "all" ? "active" : "")" asp-action="Users" asp-route-filter="all">
                        <i class="bi bi-grid me-1"></i>All Users
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "workers" ? "active" : "")" asp-action="Users" asp-route-filter="workers">
                        <i class="bi bi-tools me-1"></i>Workers
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "posters" ? "active" : "")" asp-action="Users" asp-route-filter="posters">
                        <i class="bi bi-clipboard-plus me-1"></i>Posters
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "verified" ? "active" : "")" asp-action="Users" asp-route-filter="verified">
                        <i class="bi bi-patch-check me-1"></i>Verified
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>User</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Verification</th>
                                <th>Rating</th>
                                <th>Joined</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            @if (!string.IsNullOrEmpty(user.ProfilePictureUrl))
                                            {
                                                <img src="@user.ProfilePictureUrl" alt="" class="rounded-circle me-2" style="width: 40px; height: 40px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="rounded-circle me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px; background: linear-gradient(135deg, #2563eb, #1d4ed8); color: white; font-weight: 600;">
                                                    @(user.FirstName?.FirstOrDefault())@(user.LastName?.FirstOrDefault())
                                                </div>
                                            }
                                            <div>
                                                <span class="fw-bold">@user.FirstName @user.LastName</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td>@user.Email</td>
                                    <td>@user.PhoneNumber</td>
                                    <td>
                                        @if (user.IDVerified)
                                        {
                                            <span class="badge bg-success"><i class="bi bi-patch-check-fill me-1"></i>Verified</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Not Verified</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.AverageRating.HasValue)
                                        {
                                            <span class="text-warning">
                                                @for (int i = 1; i <= 5; i++)
                                                {
                                                    <i class="bi bi-star@(i <= Math.Round(user.AverageRating.Value) ? "-fill" : "")"></i>
                                                }
                                                <span class="text-muted ms-1">(@user.AverageRating.Value.ToString("0.0"))</span>
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">No ratings</span>
                                        }
                                    </td>
                                    <td>@user.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="btn-group">
                                            <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-sm btn-outline-info" title="User Details">
                                                <i class="bi bi-eye"></i>
                                            </a>
                                           
                                            @if (!user.IsAdmin)
                                            {
                                               
                                                <a asp-action="EditRoles" asp-route-id="@user.Id" class="btn btn-sm btn-outline-warning" title="Edit Roles">
                                                    <i class="bi bi-person-gear"></i>
                                                </a>
                                                <button type="button" class="btn btn-sm btn-outline-danger" title="Delete User"
                                                        data-bs-toggle="modal" data-bs-target="#deleteModal"
                                                        data-user-id="@user.Id" data-user-name="@user.FirstName @user.LastName">
                                                    <i class="bi bi-trash"></i>
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <div class="empty-state-icon mb-3">
                        <i class="bi bi-people" style="font-size: 3rem; color: var(--muted-text);"></i>
                    </div>
                    <h5>No users found</h5>
                    <p class="text-muted">No users match the current filter.</p>
                </div>
            }
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="bi bi-exclamation-triangle me-2"></i>Confirm Delete
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the user <strong id="deleteUserName"></strong>?</p>
                <p class="text-muted small mb-0">This action will soft-delete the user account. The user will no longer be able to access the system.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="DeleteUser" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteUserId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash me-1"></i>Delete User
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('deleteModal').addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            var userId = button.getAttribute('data-user-id');
            var userName = button.getAttribute('data-user-name');
            
            document.getElementById('deleteUserId').value = userId;
            document.getElementById('deleteUserName').textContent = userName;
        });
    </script>
}