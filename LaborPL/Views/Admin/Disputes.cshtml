@model IEnumerable<LaborBLL.ModelVM.DisputeListViewModel>
@{
    ViewData["Title"] = "Dispute Management";
    var currentFilter = ViewBag.CurrentFilter as string ?? "open";
}

<div class="admin-disputes-container fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-exclamation-triangle me-2"></i>Dispute Management</h2>
            <p class="text-muted mb-0">Handle disputes between users</p>
        </div>
        <a asp-action="Index" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Back to Dashboard
        </a>
    </div>

    <!-- Stats Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card shadow-sm bg-danger text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.OpenCount</h3>
                    <small>Open Disputes</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-warning">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.UnderReviewCount</h3>
                    <small>Under Review</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-success text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.ResolvedCount</h3>
                    <small>Resolved</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card shadow-sm bg-info text-white">
                <div class="card-body text-center">
                    <h3 class="mb-0">@ViewBag.TotalDisputes</h3>
                    <small>Total Disputes</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Filter Tabs -->
    <div class="card shadow">
        <div class="card-header bg-transparent">
            <ul class="nav nav-pills card-header-pills">
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "open" ? "active" : "")" asp-action="Disputes" asp-route-filter="open">
                        <i class="bi bi-exclamation-circle me-1"></i>Open
                        <span class="badge bg-danger ms-1">@ViewBag.OpenCount</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "underreview" ? "active" : "")" asp-action="Disputes" asp-route-filter="underreview">
                        <i class="bi bi-eye me-1"></i>Under Review
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "resolved" ? "active" : "")" asp-action="Disputes" asp-route-filter="resolved">
                        <i class="bi bi-check-circle me-1"></i>Resolved
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link @(currentFilter == "all" ? "active" : "")" asp-action="Disputes" asp-route-filter="all">
                        <i class="bi bi-grid me-1"></i>All
                    </a>
                </li>
            </ul>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Task</th>
                                <th>Raised By</th>
                                <th>Status</th>
                                <th>Created</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var dispute in Model)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">#@dispute.Id</span>
                                    </td>
                                    <td>
                                        <div>
                                            <strong>@dispute.TaskTitle</strong>
                                            <br>
                                            <small class="text-muted">Booking #@dispute.BookingId</small>
                                        </div>
                                    </td>
                                    <td>@dispute.RaisedByName</td>
                                    <td>
                                        @switch (dispute.Status)
                                        {
                                            case LaborDAL.Enums.DisputeStatus.Open:
                                                <span class="badge bg-danger"><i class="bi bi-exclamation-circle me-1"></i>Open</span>
                                                break;
                                            case LaborDAL.Enums.DisputeStatus.UnderReview:
                                                <span class="badge bg-warning"><i class="bi bi-eye me-1"></i>Under Review</span>
                                                break;
                                            case LaborDAL.Enums.DisputeStatus.Resolved:
                                                <span class="badge bg-success"><i class="bi bi-check-circle me-1"></i>Resolved</span>
                                                break;
                                        }
                                    </td>
                                    <td>@dispute.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <a asp-action="DisputeDetails" asp-route-id="@dispute.Id" class="btn btn-sm btn-outline-primary">
                                            <i class="bi bi-eye me-1"></i>View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="empty-state text-center py-5">
                    <div class="empty-state-icon mb-3">
                        <i class="bi bi-exclamation-triangle" style="font-size: 3rem; color: var(--muted-text);"></i>
                    </div>
                    <h5>No disputes found</h5>
                    <p class="text-muted">No disputes match the current filter.</p>
                </div>
            }
        </div>
    </div>
</div>
