@model LaborBLL.ModelVM.DisputeDetailsViewModel
@{
    ViewData["Title"] = "Dispute Details";
    var resolveModel = ViewBag.ResolveModel as LaborBLL.ModelVM.ResolveDisputeViewModel;
}

<div class="admin-dispute-details fade-in">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="bi bi-exclamation-triangle me-2"></i>Dispute #@Model.Id</h2>
            <p class="text-muted mb-0">Review and resolve this dispute</p>
        </div>
        <a asp-action="Disputes" class="btn btn-outline-primary">
            <i class="bi bi-arrow-left me-1"></i>Back to Disputes
        </a>
    </div>

    <div class="row g-4">
        <!-- Dispute Info -->
        <div class="col-lg-8">
            <!-- Status Card -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-transparent d-flex justify-content-between align-items-center">
                    <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>Dispute Information</h5>
                    <span class="badge @Model.StatusBadgeClass">@Model.Status</span>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Raised By</label>
                            <p class="mb-0 fw-bold">@Model.RaisedByName</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Created</label>
                            <p class="mb-0">@Model.CreatedAt.ToString("MMM dd, yyyy HH:mm")</p>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small">Reason</label>
                            <div class="alert alert-light mb-0">
                                @Model.Reason
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Booking Info -->
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-calendar-check me-2"></i>Booking Information</h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <label class="text-muted small">Task</label>
                            <p class="mb-0 fw-bold">@Model.TaskTitle</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Agreed Rate</label>
                            <p class="mb-0 fw-bold text-success">$@Model.AgreedRate</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">Start Time</label>
                            <p class="mb-0">@(Model.StartTime?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")</p>
                        </div>
                        <div class="col-md-6">
                            <label class="text-muted small">End Time</label>
                            <p class="mb-0">@(Model.EndTime?.ToString("MMM dd, yyyy HH:mm") ?? "N/A")</p>
                        </div>
                        <div class="col-12">
                            <label class="text-muted small">Description</label>
                            <p class="mb-0 text-muted">@(Model.TaskDescription ?? "No description provided")</p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Parties Info -->
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-success bg-opacity-10">
                            <h6 class="mb-0 text-success"><i class="bi bi-person me-2"></i>Task Poster</h6>
                        </div>
                        <div class="card-body">
                            <p class="fw-bold mb-1">@Model.PosterName</p>
                            <p class="text-muted small mb-0">
                                <i class="bi bi-telephone me-1"></i>@(Model.PosterPhone ?? "No phone")
                            </p>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary bg-opacity-10">
                            <h6 class="mb-0 text-primary"><i class="bi bi-person-badge me-2"></i>Worker</h6>
                        </div>
                        <div class="card-body">
                            <p class="fw-bold mb-1">@Model.WorkerName</p>
                            <p class="text-muted small mb-0">
                                <i class="bi bi-telephone me-1"></i>@(Model.WorkerPhone ?? "No phone")
                            </p>
                        </div>
                    </div>
                </div>
            </div>

            @if (Model.Status == DisputeStatus.Resolved)
            {
                <!-- Resolution Info -->
                <div class="card shadow-sm mt-4 border-success">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="bi bi-check-circle me-2"></i>Resolution</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="text-muted small">Resolution Type</label>
                                <p class="mb-0 fw-bold">@Model.ResolutionType</p>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Worker Receives</label>
                                <p class="mb-0 fw-bold text-success">@Model.WorkerPercentage%</p>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Resolved By</label>
                                <p class="mb-0">@Model.ResolvedByName</p>
                            </div>
                            <div class="col-md-6">
                                <label class="text-muted small">Resolved At</label>
                                <p class="mb-0">@Model.ResolvedAt?.ToString("MMM dd, yyyy HH:mm")</p>
                            </div>
                            <div class="col-12">
                                <label class="text-muted small">Resolution Notes</label>
                                <div class="alert alert-light mb-0">
                                    @Model.Resolution
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Actions Panel -->
        <div class="col-lg-4">
            @if (Model.CanResolve)
            {
                <div class="card shadow-sm border-warning">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="bi bi-gavel me-2"></i>Resolve Dispute</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="ResolveDispute" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="DisputeId" value="@Model.Id" />
                            <input type="hidden" name="TaskTitle" value="@Model.TaskTitle" />
                            <input type="hidden" name="AgreedRate" value="@Model.AgreedRate" />
                            <input type="hidden" name="PosterName" value="@Model.PosterName" />
                            <input type="hidden" name="WorkerName" value="@Model.WorkerName" />

                            <div class="mb-3">
                                <label class="form-label">Resolution Type</label>
                                <select name="ResolutionType" class="form-select" required>
                                    <option value="">-- Select Resolution --</option>
                                    <option value="@((int)LaborDAL.Enums.ResolutionType.WorkerWins)">Worker Wins (100% to worker)</option>
                                    <option value="@((int)LaborDAL.Enums.ResolutionType.PosterWins)">Poster Wins (100% refund)</option>
                                    <option value="@((int)LaborDAL.Enums.ResolutionType.SplitEvenly)">Split Evenly (50/50)</option>
                                    <option value="@((int)LaborDAL.Enums.ResolutionType.CustomSplit)">Custom Split</option>
                                </select>
                            </div>

                            <div class="mb-3" id="customPercentage" style="display: none;">
                                <label class="form-label">Worker Percentage</label>
                                <div class="input-group">
                                    <input type="number" name="WorkerPercentage" class="form-control" min="0" max="100" />
                                    <span class="input-group-text">%</span>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Resolution Notes</label>
                                <textarea name="Resolution" class="form-control" rows="4" required
                                          placeholder="Explain your decision..."></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-lg me-1"></i>Resolve Dispute
                                </button>
                            </div>
                        </form>

                        @if (Model.Status == DisputeStatus.Open)
                        {
                            <hr>
                            <form asp-action="UpdateDisputeStatus" method="post" class="mt-3">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="disputeId" value="@Model.Id" />
                                <input type="hidden" name="status" value="@((int)LaborDAL.Enums.DisputeStatus.UnderReview)" />
                                <button type="submit" class="btn btn-outline-warning w-100">
                                    <i class="bi bi-eye me-1"></i>Mark Under Review
                                </button>
                            </form>
                        }
                    </div>
                </div>
            }

            <!-- Payment Summary -->
            <div class="card shadow-sm mt-4">
                <div class="card-header bg-transparent">
                    <h5 class="mb-0"><i class="bi bi-cash me-2"></i>Payment Summary</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span>Total Amount:</span>
                        <strong>$@Model.AgreedRate</strong>
                    </div>
                    @if (Model.Status == DisputeStatus.Resolved && Model.WorkerPercentage.HasValue)
                    {
                        var workerAmount = Model.AgreedRate * Model.WorkerPercentage.Value / 100;
                        var posterAmount = Model.AgreedRate - workerAmount;
                        <hr>
                        <div class="d-flex justify-content-between mb-2 text-success">
                            <span>Worker receives:</span>
                            <strong>$@workerAmount.ToString("F2")</strong>
                        </div>
                        <div class="d-flex justify-content-between text-info">
                            <span>Poster receives:</span>
                            <strong>$@posterAmount.ToString("F2")</strong>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted small mb-0">
                            <i class="bi bi-info-circle me-1"></i>
                            Payment is held in escrow until dispute is resolved.
                        </p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.querySelector('select[name="ResolutionType"]').addEventListener('change', function() {
            var customDiv = document.getElementById('customPercentage');
            if (this.value === '@((int)LaborDAL.Enums.ResolutionType.CustomSplit)') {
                customDiv.style.display = 'block';
                customDiv.querySelector('input').required = true;
            } else {
                customDiv.style.display = 'none';
                customDiv.querySelector('input').required = false;
            }
        });
    </script>
}
